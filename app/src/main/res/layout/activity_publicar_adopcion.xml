<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro11"
    tools:ignore="HardcodedText">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            >

            <TextView
                android:id="@+id/tituloAdopcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Pon en adopción a un perro"
                android:textSize="30sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/white"
                android:background="@color/brown"
                android:paddingHorizontal="60dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/tituloAdopcion"
                android:orientation="vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:background="@color/dark_beige"
                app:layout_constraintStart_toStartOf="parent"
                android:weightSum="18"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Nombre del perro"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_height="0dp"
                    app:cardCornerRadius="20dp"
                    >

                    <EditText
                        android:id="@+id/editTextNombre"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Ej. Tonny"
                        android:textSize="15sp"
                        />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Edad"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    app:cardCornerRadius="20dp">

                    <EditText
                        android:id="@+id/editTextEdad"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Ej. 2 años"

                        android:textSize="15sp" />

                </androidx.cardview.widget.CardView>

                <!-- Raza -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Raza"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    app:cardCornerRadius="20dp">

                    <EditText
                        android:id="@+id/editTextRaza"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Ej. Labrador"
                        android:textSize="15sp" />

                </androidx.cardview.widget.CardView>

                <!-- Tamaño -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Tamaño"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    app:cardCornerRadius="20dp">

                    <EditText
                        android:id="@+id/editTextTamanio"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Ej. Grande"
                        android:textSize="15sp" />

                </androidx.cardview.widget.CardView>

                <!-- Vacuna -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Vacuna"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    app:cardCornerRadius="20dp">

                    <EditText
                        android:id="@+id/editTextVacuna"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Ej. Antirrábica"
                        android:textSize="15sp" />

                </androidx.cardview.widget.CardView>

                <!-- Esterilización -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Esterilización"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    app:cardCornerRadius="20dp">

                    <EditText
                        android:id="@+id/editTextEsterilizacion"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Ej. Sí / No"
                        android:textSize="15sp" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <Button
                android:id="@+id/botonPublicar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="publicar"
                android:background="@color/brown"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


    <!-- Contenido principal -->


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationMenu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/navigation_menu" />



</androidx.drawerlayout.widget.DrawerLayout>
