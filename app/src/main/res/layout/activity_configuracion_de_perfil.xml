<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfiguracionDePerfil">
    
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLine1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/guideLine1"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/mustard"
        >
        <TextView
            android:id="@+id/titulo1Registro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONFIGURA TU PERFIL Y EL DE TU(S) HIJO(S)"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/reddish_brown"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideLine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25"/>

        <TextView
            android:id="@+id/textoNombreReg"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/guideLine2"
            app:layout_constraintTop_toBottomOf="@+id/titulo1Registro"
            android:text="Francon Lopez"
            android:textStyle="bold"
            android:textColor="@color/dark_brown"
            />
        <TextView
            android:id="@+id/edadRegistro"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:layout_constraintStart_toEndOf="@id/guideLine2"
            app:layout_constraintTop_toBottomOf="@+id/textoNombreReg"
            android:text="25 años"
            android:textStyle="bold"
            android:textColor="@color/dark_brown"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:layout_constraintStart_toEndOf="@id/guideLine2"
            app:layout_constraintTop_toBottomOf="@+id/edadRegistro"
            android:text="Zona Sur"
            android:textStyle="bold"
            android:textColor="@color/dark_brown"
            />


        <ImageView
            android:id="@+id/perfilUsuario1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/reddish_brown"
            app:layout_constraintEnd_toStartOf="@id/guideLine2"
            app:layout_constraintTop_toBottomOf="@id/titulo1Registro"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLine3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/guideLine3"
        app:layout_constraintTop_toBottomOf="@id/guideLine1"
        android:background="@color/fondo"
        >

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginVertical="15dp"
            android:layout_marginStart="20dp"
            android:weightSum="9"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="NOMBRE"
                android:layout_weight="1"
                android:textSize="15sp"/>
            
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                app:cardCornerRadius="20dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    />

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="ZONA DE RESIDENCIA"
                android:layout_weight="1"
                android:textSize="15sp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                app:cardCornerRadius="20dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    />

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="CONTRASEÑA"
                android:layout_weight="1"
                android:textSize="15sp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                app:cardCornerRadius="20dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    />

            </androidx.cardview.widget.CardView>




        </LinearLayout>








    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/subtituloText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HIJO(S) CANINO(S)"
        android:textSize="18sp"
        android:paddingVertical="5dp"
        android:gravity="center"
        android:textColor="@color/reddish_brown"
        app:layout_constraintTop_toTopOf="@id/guideLine3"
        android:background="#FDB364"
        android:textStyle="bold"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/subtituloText"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>